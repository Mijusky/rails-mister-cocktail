<div class="container">
  <h3 class="text-center">Add an ingredient</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, :label => "Quantity" %>
      <%= f.input :ingredient_id, :as => :select, :collection => Ingredient.all %>
      <%= f.submit "Submit", class: "btn btn-pink" %>
      <% end %>
      </div>
    </div>
</div>

<i class="fas fa-home"></i><%= link_to "Go back", cocktails_path %>
