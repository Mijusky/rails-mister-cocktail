<div class="container pad20">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card display-grid mb-3" style="width: 18rem;">
          <img class="card-img-top" src="https://images.unsplash.com/photo-1545438102-799c3991ffb2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" alt="Card image cap">
          <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <h3><%= link_to "See details", cocktail_path(cocktail), class: "btn btn-primary m-3" %></h3>
          </div>
          <div class="card-rating text-center">
            <% cocktail.average_stars.times do |star| %>
              <i class="fa fa-star" aria-hidden="true"></i>
            <% end %>
            <p>(<%= cocktail.stars.length %> votes)</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
