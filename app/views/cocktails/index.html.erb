<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1594401333633-598ef7c1e801?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <h1>Cocktails üç∏</h1>
    <h3><%= link_to "Create Cocktail", new_cocktail_path, class: "btn btn-pink m-3" %></h3>
  </div>
</div>
<br>
<div class="cards">
     <div class="row justify-content-center">
        <% @cocktails.each do |cocktail| %>
        <div class="col-lg-4 col-12  p-2">
            <div class="card" style="height: 100%;">
                <% if cocktail.photo.attached? %>
                  <%= cl_image_tag cocktail.photo.key %>
                <% else %>
                  <%= cl_image_tag("EbslIbA_hvjncc") %>
                <% end %>
                <div class="card-body">
                  <div class="card-title text-center">
                    <h2><strong> <%= cocktail.name %></strong></h2>
                    <%= link_to "Details", cocktail_path(cocktail), :class => "btn btn-pink" %>
                  </div>
                  <div class="card-rating text-center">
                  <% cocktail.average_stars.times do |star| %>
                    <i class="fa fa-star" aria-hidden="true"></i>
                  <% end %>
                </div>
                </div>
            </div>
        </div>
        <% end %>
  </div>
</div>
